{
  "mcpServers": {
    "context7": {
      "command": "bunx",
      "args": [
        "-y",
        "context7-mcp@latest"
      ],
      "env": {}
    },
    "playwright": {
      "command": "bunx",
      "args": [
        "-y",
        "@playwright/mcp@latest",
        "--headless"
      ],
      "env": {}
    },
    "claude": {
      "command": "claude",
      "args": [
        "mcp",
        "serve",
        "--permission-mode",
        "bypassPermissions",
        "--transport",
        "stdio"
      ],
      "env": {}
    }
  }
}
